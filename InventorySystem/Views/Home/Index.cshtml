@{
    Layout = "_Layout";
}

<link href="~/css/dashboard.css" rel="stylesheet" />

<!-- Main Content -->
<main class="main-content">
    <div class="page-header">
        <h2>Dashboard</h2>
        <div class="breadcrumb">
            <span>Home</span>
            <span>›</span>
            <span>Dashboard</span>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="stats-grid">
        <div class="stat-card success">
            <div class="stat-header">
                <span class="stat-label">Total Sales Today</span>
                <span class="stat-icon">💵</span>
            </div>
            <div class="stat-value">$24,580</div>
            <div class="stat-change positive">↑ 12% from yesterday</div>
        </div>

        <div class="stat-card info">
            <div class="stat-header">
                <span class="stat-label">Total Purchases</span>
                <span class="stat-icon">📦</span>
            </div>
            <div class="stat-value">$18,240</div>
            <div class="stat-change positive">↑ 8% from last week</div>
        </div>

        <div class="stat-card warning">
            <div class="stat-header">
                <span class="stat-label">Inventory Items</span>
                <span class="stat-icon">🏷️</span>
            </div>
            <div class="stat-value">1,248</div>
            <div class="stat-change">45 items low stock</div>
        </div>

        <div class="stat-card danger">
            <div class="stat-header">
                <span class="stat-label">Pending Orders</span>
                <span class="stat-icon">⏳</span>
            </div>
            <div class="stat-value">32</div>
            <div class="stat-change negative">↑ 5 from yesterday</div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Quick Actions</h3>
        </div>
        <div class="quick-actions">
            <a href="#" class="quick-action-btn">
                <div class="quick-action-icon">🛒</div>
                <div class="quick-action-label">New Sale</div>
            </a>
            <a href="#" class="quick-action-btn">
                <div class="quick-action-icon">📥</div>
                <div class="quick-action-label">New Purchase</div>
            </a>
            <a href="#" class="quick-action-btn">
                <div class="quick-action-icon">➕</div>
                <div class="quick-action-label">Add Item</div>
            </a>
            <a href="#" class="quick-action-btn">
                <div class="quick-action-icon">👥</div>
                <div class="quick-action-label">Customers</div>
            </a>
            <a href="#" class="quick-action-btn">
                <div class="quick-action-icon">📊</div>
                <div class="quick-action-label">Reports</div>
            </a>
            <a href="#" class="quick-action-btn">
                <div class="quick-action-icon">⚙️</div>
                <div class="quick-action-label">Settings</div>
            </a>
        </div>
    </div>

    <!-- Dashboard Grid -->
    <div class="dashboard-grid">
        <!-- Sales Chart -->
        <div class="chart-card">
            <div class="card-header">
                <h3 class="card-title">Sales Overview</h3>
            </div>
            <div class="chart-placeholder">
                📈 Sales Chart (Integrate Chart.js or similar)
            </div>
        </div>

        <!-- Recent Activity -->
        <div class="chart-card">
            <div class="card-header">
                <h3 class="card-title">Recent Activity</h3>
            </div>
            <ul class="activity-list">
                <li class="activity-item">
                    <div class="activity-icon">🛒</div>
                    <div class="activity-content">
                        <div class="activity-title">New sale invoice #1245 created</div>
                        <div class="activity-time">5 minutes ago</div>
                    </div>
                </li>
                <li class="activity-item">
                    <div class="activity-icon">📦</div>
                    <div class="activity-content">
                        <div class="activity-title">Purchase order #3421 received</div>
                        <div class="activity-time">1 hour ago</div>
                    </div>
                </li>
                <li class="activity-item">
                    <div class="activity-icon">⚠️</div>
                    <div class="activity-content">
                        <div class="activity-title">Low stock alert: Item #245</div>
                        <div class="activity-time">2 hours ago</div>
                    </div>
                </li>
                <li class="activity-item">
                    <div class="activity-icon">✅</div>
                    <div class="activity-content">
                        <div class="activity-title">Payment received from Customer #892</div>
                        <div class="activity-time">3 hours ago</div>
                    </div>
                </li>
            </ul>
        </div>
    </div>

    <!-- Top Selling Items -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Top Selling Items</h3>
        </div>
        <div class="table-responsive">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>Item ID</th>
                        <th>Item Name</th>
                        <th>Category</th>
                        <th>Quantity Sold</th>
                        <th>Revenue</th>
                        <th>Stock</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>1</td>
                        <td>Test Product</td>
                        <td>Test Category</td>
                        <td>245</td>
                        <td>$4,580.00</td>
                        <td>156</td>
                    </tr>
                    <tr>
                        <td>2</td>
                        <td>Sample Item</td>
                        <td>Electronics</td>
                        <td>189</td>
                        <td>$3,290.00</td>
                        <td>89</td>
                    </tr>
                    <tr>
                        <td>3</td>
                        <td>Demo Product</td>
                        <td>Accessories</td>
                        <td>167</td>
                        <td>$2,840.00</td>
                        <td>234</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</main>
